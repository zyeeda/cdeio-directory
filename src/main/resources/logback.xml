<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true" >

	<property name="applicationName" value="zyeeda-drivebox" />
    
    <contextName>${applicationName}</contextName>
    
    <substitutionProperty name="log.base" value="logs" />
    
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoding>UTF-8</encoding>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd hh:mm:ss.SSS} %-5p %logger.%M [%t] - %m%n
            </pattern>
        </encoder>
	</appender>
	
    <logger name="org.springframework" level="DEBUG" />
	<logger name="org.hibernate" level="DEBUG" />
	<logger name="org.mortbay" level="INFO" />
    <logger name="org.quartz" level="INFO" />
    <logger name="bitronix.tm" level="INFO" />
    <logger name="org.enhydra" level="INFO" />
    <logger name="org.objectweb" level="INFO" />
	
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
	
</configuration>
